post_install() {
	post_upgrade
}

post_upgrade() {
	/usr/bin/pacman-key -a /usr/share/shawly-keyring/public.gpg
	KEY=$(gpg --show-keys --keyid-format=long /usr/share/shawly-keyring/public.gpg | grep 'pub' | awk 'match($2,/[A-Z0-9]{16}/){print substr($2,RSTART,RLENGTH)}')
	/usr/bin/pacman-key --lsign-key ${KEY}
}

pre_remove() {
	KEY=$(gpg --show-keys --keyid-format=long /usr/share/shawly-keyring/public.gpg | grep 'pub' | awk 'match($2,/[A-Z0-9]{16}/){print substr($2,RSTART,RLENGTH)}')
	/usr/bin/pacman-key -d ${KEY}
}
